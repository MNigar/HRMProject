@using HRProject.Areas.Structure.Controllers
@model HRProject.Areas.Structure.Models.OrganizationStructureViewModel

<div id="formModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalCenterTitle" style="color: white;">AddNew</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="ti-close"></i>
                </button>
            </div>
            <form class="form-horizontal m-t-20"
                  asp-action="Form"
                  asp-controller="OrganizationStructure"
                  asp-area="Structure"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-success="success">

                @Html.AntiForgeryToken()
                <div class="modal-body">
                    @Html.HiddenFor(x => x.Id)

                   
                    <div class="form-group">
                        <h6 class="sub-title">Structure</h6>
                        @(Html.DevExtreme().SelectBoxFor(x => x.StructureId)
                                    .DataSource(x => x.Mvc().Controller(StructureController.Name).LoadAction(nameof(StructureController.GetAll)).Key("Id"))
                                    .DisplayExpr("Name")
                                    .ValueExpr("Id")
                                    .Placeholder(/*stringLocalizer["ChooseSelectBox"]*/ "ChooseSelectBox")
                                    .NoDataText(/*stringLocalizer["NoData"]*/ "ChooseSelectBox"))
                    </div>
                    <div class="form-group">
                        <h6 class="sub-title">Branch</h6>
                        @(Html.DevExtreme().SelectBoxFor(x => x.BranchId)
                                    .DataSource(x => x.Mvc().Controller(BranchController.Name).LoadAction(nameof(BranchController.GetAll)).Key("Id"))
                                    .DisplayExpr("Name")
                                    .ValueExpr("Id")
                                    .Placeholder(/*stringLocalizer["ChooseSelectBox"]*/ "ChooseSelectBox")
                                    .NoDataText(/*stringLocalizer["NoData"]*/ "ChooseSelectBox"))
                    </div>
                    <div class="form-group">
                        <h6 class="sub-title">ParentBranch</h6>
                        @(Html.DevExtreme().SelectBoxFor(x => x.ParentBranchId)
                                    .DataSource(x => x.Mvc().Controller(BranchController.Name).LoadAction(nameof(BranchController.GetAll)).Key("Id"))
                                    .DisplayExpr("Name")
                                    .ValueExpr("Id")
                                    .Placeholder(/*stringLocalizer["ChooseSelectBox"]*/ "ChooseSelectBox")
                                    .NoDataText(/*stringLocalizer["NoData"]*/ "ChooseSelectBox"))
                    </div>
                    <div class="form-group">
                        <h6 class="sub-title">OrganizationStructure</h6>
                        @(Html.DevExtreme().SelectBoxFor(x => x.OrganizationStructureId)
                                    .DataSource(x => x.Mvc().Controller(OrganizationStructureController.Name).LoadAction(nameof(OrganizationStructureController.GetAll)).Key("Id"))
                                    .DisplayExpr("StructureName")
                                    .ValueExpr("Id")
                                    .Placeholder(/*stringLocalizer["ChooseSelectBox"]*/ "ChooseSelectBox")
                                    .NoDataText(/*stringLocalizer["NoData"]*/ "ChooseSelectBox"))
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <input type="button" value="Cancel" class="btn btn-default" data-dismiss="modal" />
                </div>

            </form>
        </div>
    </div>
</div>


<script type="text/javascript">

    function cancel() {
        location.href = '@Url.Action(nameof(OrganizationStructureController.Index), OrganizationStructureController.Name)';
    }



</script>



